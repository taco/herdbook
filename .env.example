# Herdbook Environment Configuration
# Copy this file to .env.local and fill in your values
# See README.md for full documentation

# Database connection string
# Local: postgresql://user:password@localhost:5432/herdbook
# Neon: postgresql://user:password@your-neon-host/neondb?sslmode=require
DATABASE_URL="postgresql://herdbook:herdbook@localhost:5432/herdbook"

# JWT signing secret (use a long random string in production)
JWT_SECRET="change-me-in-production"

# Comma-separated list of allowed email addresses
ALLOWED_EMAILS="user@example.com"

# Rate limits (requests per minute) - optional, defaults shown
# RATE_LIMIT_READ=120
# RATE_LIMIT_WRITE=30
# RATE_LIMIT_AUTH=10

# CORS allowed origins (set explicitly in production)
# CORS_ALLOWED_ORIGINS=https://your-app.example.com

# OpenAI API key for voice transcription (Whisper)
# OPENAI_API_KEY=sk-proj-...

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
