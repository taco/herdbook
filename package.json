{
    "name": "herdbook",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "init": "pnpm install && pnpm --filter api prisma:generate",
        "dev": "node scripts/dev.mjs",
        "dev:api": "pnpm --filter api dev",
        "dev:web": "pnpm --filter web dev",
        "build": "pnpm --filter api build && pnpm --filter web build",
        "build:api": "pnpm --filter api build",
        "build:web": "pnpm --filter web build",
        "format": "prettier --write \"**/*.{ts,tsx,mjs,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,mjs,json,md}\"",
        "typecheck": "pnpm -r run typecheck",
        "check": "pnpm format:check && pnpm typecheck",
        "test": "pnpm --filter api test && pnpm --filter web test",
        "test:e2e": "pnpm --filter e2e test",
        "test:e2e:dev": "node scripts/e2e-dev.mjs",
        "test:e2e:ui": "pnpm --filter e2e test:ui",
        "env:local": "ln -sf ../../.env.local packages/api/.env && echo 'Switched to local database'",
        "env:neon-dev": "ln -sf ../../.env.neon-dev packages/api/.env && echo 'Switched to Neon dev database'",
        "env:neon-prod": "ln -sf ../../.env.neon-prod packages/api/.env && echo 'Switched to Neon production database'",
        "env:status": "readlink packages/api/.env || echo 'Not a symlink'",
        "prisma:migrate:deploy": "pnpm --filter api prisma:migrate:deploy",
        "prisma:studio": "pnpm --filter api prisma:studio"
    },
    "devDependencies": {
        "prettier": "^3.7.4"
    },
    "packageManager": "pnpm@10.4.0+sha512.6b849d0787d97f8f4e1f03a9b8ff8f038e79e153d6f11ae539ae7c435ff9e796df6a862c991502695c7f9e8fac8aeafc1ac5a8dab47e36148d183832d886dd52"
}
