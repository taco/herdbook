generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Horse {
  id        String    @id @default(cuid())
  name      String
  notes     String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
}

model Rider {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  password  String
  sessions  Session[]
}

model Session {
  id              String   @id @default(cuid())
  horse           Horse    @relation(fields: [horseId], references: [id])
  horseId         String
  rider           Rider    @relation(fields: [riderId], references: [id])
  riderId         String
  date            DateTime
  durationMinutes Int
  workType        WorkType
  notes           String   @default("")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum WorkType {
  FLATWORK
  JUMPING
  GROUNDWORK
  IN_HAND
  TRAIL
  OTHER
}
