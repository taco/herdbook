{
    "name": "@herdbook/api",
    "version": "0.1.0",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "pnpm run prisma:generate && tsc",
        "start": "node dist/index.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "prisma:studio": "prisma studio",
        "prisma:seed:e2e": "tsx prisma/seedE2E.ts",
        "test": "vitest",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:coverage:html": "vitest run --coverage --html",
        "test:coverage:lcov": "vitest run --coverage --coverage-reporter lcov",
        "test:run": "vitest run"
    },
    "dependencies": {
        "@apollo/server": "^5.2.0",
        "@apollo/subgraph": "^2.12.2",
        "@as-integrations/fastify": "^3.1.0",
        "@fastify/cors": "^11.2.0",
        "@graphql-tools/utils": "^10.11.0",
        "@prisma/adapter-pg": "^7.1.0",
        "@prisma/client": "^7.1.0",
        "bcrypt": "^6.0.0",
        "dataloader": "^2.2.3",
        "dotenv": "^17.2.3",
        "fastify": "^5.6.2",
        "graphql": "^16.12.0",
        "graphql-scalars": "^1.25.0",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.10.2",
        "@types/pg": "^8.15.6",
        "csv-parse": "^6.1.0",
        "prisma": "^7.1.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    }
}
