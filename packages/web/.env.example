# Copy this file to .env.local and fill in your values
# .env.local is gitignored and won't be committed

# Required: API base URL (no /graphql suffix)
VITE_API_URL=https://localhost:4000

# Dev convenience: prefill login form credentials
VITE_DEV_EMAIL=test@example.com
VITE_DEV_PASSWORD=test

# Set to "true" to auto-submit login form (zero clicks)
VITE_DEV_AUTOLOGIN=true

# Sentry error tracking (optional — omit to disable)
# VITE_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Sentry performance tracing sample rate (0–1, default 0 = disabled)
# VITE_SENTRY_TRACES_SAMPLE_RATE=0.2

# Build-time only (CI): upload source maps to Sentry
# SENTRY_AUTH_TOKEN=sntrys_...  (or SENTRY_TOKEN as fallback)
# SENTRY_ORG=your-org
# SENTRY_PROJECT=herdbook-web
